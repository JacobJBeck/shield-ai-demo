#----------------------------------------------------------------------------
#       Macros
#----------------------------------------------------------------------------
CXX = g++
CPPFLAGS = -std=c++11 -Wall
TARGET = demo

#----------------------------------------------------------------------------
#       Local targets
#----------------------------------------------------------------------------

$(TARGET): $(TARGET).cpp
	$(CXX) $(CPPFLAGS) -I $(MADARA_ROOT)/include $(TARGET).cpp -L $(MADARA_ROOT)/lib -l MADARA -o $(TARGET)
